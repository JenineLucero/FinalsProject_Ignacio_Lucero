<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Home Page-->
    <style name="bg">
        <item name="android:background">@color/background</item>
    </style>
    <style name="mainbg">
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="button">
        <item name="android:background">@drawable/round_border</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:buttonCornerRadius">30dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="title">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="description1">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">gravity</item>
    </style>
    <style name="description2">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>
    <style name="title2">
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:padding">10dp</item>
        <item name="android:elevation">10dp</item>

</style>
    <style name="title4">
        <item name="android:textSize">21dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/border</item>

        <item name="android:padding">10dp</item>
        <item name="android:elevation">10dp</item>

    </style>
    <style name="title3">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>


        <item name="android:elevation">10dp</item>

    </style>
    <style name="mainbtn">
        <item name="android:background">@drawable/mainbutton</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:buttonCornerRadius">30dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
    </style>
<style name="main">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">60dp</item>
    </style>
    <style name="check">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">18dp</item>
        <item name="android:colorAccent">@color/red</item>
    </style>
    <!--Home Page-->

    <style name="dis">
        <item name="android:background">@color/back</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="image">
        <item name="android:background">@color/border</item>

    </style>
    <style name="todo">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">5dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="checklist">
        <item name="android:elevation">15dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginHorizontal">400dp</item>
    </style>
</resources>

